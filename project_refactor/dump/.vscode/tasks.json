{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "e2e_control_run",
			"type": "shell",
			"command": "./.venv/bin/python run_pipeline.py run --input-data v5.0/train.parquet --features-json v5.0/features.json --run-name control_targets_only --max-new-features 0 --disable-pathfinding --pretty --smoke-mode --smoke-max-eras 60 --smoke-row-limit 150000 --seed 42",
			"options": {
				// TD_NUM_THREADS: -1 uses all cores; set to a number to limit CPU threads
				// TD_USE_GPU: set to "1" to request LightGBM GPU if your build supports it
				"env": {
					"TD_NUM_THREADS": "-1",
					"TD_USE_GPU": "1",
					"TD_GPU_PLATFORM_ID": "0",
					"TD_GPU_DEVICE_ID": "0"
				}
			},
			"isBackground": false,
			"problemMatcher": [
				"$flake8-stylish"
			],
			"group": "build"
		},
		{
			"label": "e2e_experiment_run",
			"type": "shell",
			"command": "./.venv/bin/python run_pipeline.py run --input-data v5.0/train.parquet --features-json v5.0/features.json --run-name exp_full_small --max-new-features 8 --pretty --smoke-mode --smoke-max-eras 60 --smoke-row-limit 150000 --smoke-feature-limit 300 --seed 42",
			"options": {
				"env": {
					"TD_NUM_THREADS": "-1",
					"TD_USE_GPU": "1",
					"TD_GPU_PLATFORM_ID": "0",
					"TD_GPU_DEVICE_ID": "0"
				}
			},
			"isBackground": false,
			"problemMatcher": [
				"$flake8-stylish"
			],
			"group": "build"
		}
	]
}